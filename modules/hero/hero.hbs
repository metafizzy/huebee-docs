<header class="hero color2-bg" data-js="hero">
  <div class="container">

    <div class="hero__masthead">
      {{> huebee-logo}}
      <div class="hero__masthead__content">
        <h1 class="hero__title color5-text">Huebee</h1>
        <p class="hero__tagline">One-click color picker</p>
        <div class="hero__pickers">
          {{#each paletteColors}}
            {{> hero-picker color=this}}
          {{/each}}
          <button class="button button--reset">Reset</button>
        </div>
      </div>
    </div>

    {{> big-buttons}}

  </div>
</header>
