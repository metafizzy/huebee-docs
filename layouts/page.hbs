<!doctype html>
<html lang="en" class="{{#if isExport}}export{{/if}}">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />

  <title>Huebee{{#unless page.isHomepage}} &middot; {{page.title}}{{/unless}}</title>

  {{#if isDev}}
    {{#each cssPaths}}
      <link rel="stylesheet" href="../{{this}}" />
    {{/each}}
  {{else}}
    <link rel="stylesheet" href="{{page.rootPath}}css/huebee-docs.css?{{cacheVersions.css}}" />
  {{/if}}

  {{> palette-styles}}

  {{#unless isExport}}
    {{> head-meta}}
  {{/unless}}

</head>
<body class="page--{{@file.basename}} color4-text color5-bg">

{{#if page.isHomepage}}
  {{> hero}}
{{else}}
  {{> site-header}}
{{/if}}

<div class="main">
  <div class="container">

    {{> site-nav}}

{{#block "main"}}{{/block}}
  </div>
</div>

{{> site-footer huebee=true}}

{{#if isDev}}
  {{#each jsPaths}}
    <script src="../{{this}}"></script>
  {{/each}}
{{else}}
  <script src="{{page.rootPath}}js/huebee-docs.min.js?{{cacheVersions.js}}"></script>
{{/if}}

{{#unless isExport}}
  <script>
    window.ga=function(){ga.q.push(arguments)};ga.q=[];ga.l=+new Date;
    ga('create','UA-58739927-6','auto');ga('send','pageview')
  </script>
  <script src="https://www.google-analytics.com/analytics.js" async defer></script>
{{/unless}}

</body>
</html>
